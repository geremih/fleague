

.container-fluid
  .row
    .col-lg-2.sidebar
      %ul.nav.nav-sidebar
        %li.active
          %a{href: match_index_path}
            Match up!
        %li
          %a{href:"#"}
            Update player details
        %li
          %a{href:"#"}    
            User Details  
        %li
          %a{href: match_schedule_path}    
            Schedule Match
    .col-lg-10.col-lg-offset-2 
      = form_tag match_path(@match),  method: :put , :id => "matchup-form" do
        .row
          .col-lg-2
            %h1  Match up!        
          .col-lg-1.col-lg-offset-4
            = submit_tag("Matchup!" , class: "btn btn-default btn-primary btn-lg" )
          .col-lg-1
            %button.btn.btn-lg.btn-primary#random-button{type: "button"}
              Random
        .row
          .col-lg-offset-2.col-lg-6
            %ul.list-group
              - for player in @players
                %li.list-group-item
                  = player.name
                  = text_field_tag( player.id , nil, class: "player-score-input form-control")


